{
  "format_version": "1.10.0",
  "minecraft:attachable": {
    "description": {
      "identifier": "fort:custom_sword_1",
      "materials": {
        "default": "entity_alphatest",
        "enchanted": "entity_alphatest_glint"
      },
      "textures": {
        "default": "textures/items/custom_sword",
        "enchanted": "textures/misc/enchanted_item_glint"
      },
      "geometry": {
        "default": "geometry.fortify.custom_sword"
      },
      "scripts": {
        "initialize": [
          "v.attack_time        = 0;",
          "v.rotation_offset_x  = 0;",
          "v.rotation_offset_y  = 0;",
          "v.rotation_offset_z  = 0;",
          "v.transform_offset_x = 0;",
          "v.transform_offset_y = 0;",
          "v.transform_offset_z = 0;",
          "v.scale_offset       = 0;"
        ],
        "animate": [
          { "hold_first_person": "c.is_first_person"},
          { "hold_third_person": "!c.is_first_person"}
        ],
        "pre_animation": [
          "v.attack_time        = c.owning_entity->v.attack_time;",
          "v.rotation_offset_x  = q.property('fort:rotation_offset_x')/10;",
          "v.rotation_offset_y  = q.property('fort:rotation_offset_y')/10;",
          "v.rotation_offset_z  = q.property('fort:rotation_offset_z')/10;",
          "v.transform_offset_x = q.property('fort:transform_offset_x')/100;",
          "v.transform_offset_y = q.property('fort:transform_offset_y')/100;",
          "v.transform_offset_z = q.property('fort:transform_offset_z')/100;",
          "v.scale_offset       = q.property('fort:scale_offset')/100;"
        ]
      },
      "animations": {
        "hold_first_person": "animation.fortify.hold_first_person",
        "hold_third_person": "animation.fortify.hold_third_person"
      },
      "render_controllers": [ "controller.render.item_default" ]
    }
  }
}
